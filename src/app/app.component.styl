set-flex(direction = row)
    display flex
    flex-direction direction

.app
    height 100%
    width 100%
    position relative
    display flex
    align-items stretch
    &-nav-links
        width 200px
        flex none
        background rgba(0,0,0,.02)
        justify-content flex-end
        padding 20px
        transition .3s
        set-flex(column)
        .container-image-profile
          margin-bottom auto
    &-main
        width 100%
        background light
        padding 1em 6em 0
        overflow-y scroll
        transition .3s
        &::-webkit-scrollbar
            width 12px
            background rgb(245,245,245)
            &:horizontal
                display none
        &::-webkit-scrollbar-thumb
            background primaryThird
            border-radius 7px
            border 4px solid rgb(245,245,245)
        &::-webkit-scrollbar-button
            background transparent
        @media screen and (max-width : mediaTabletBig)
          &::-webkit-scrollbar
            display none

    @media screen and (max-width : mediaTabletBig)
      display block
      &-nav-links
        width 100%
      &-main
        width 100%
        padding 0 1em

.to-right
    display flex
    justify-content flex-end
    margin-bottom 20px
