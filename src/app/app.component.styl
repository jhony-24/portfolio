set-flex(direction = row)
    display flex
    flex-direction direction

.app 
    height 100%
    width 100%
    position relative
    display flex
    align-items stretch
    
    &-nav-links 
        width 200px
        flex none
        background linear-gradient(60deg, primary , primaryAlternate)
        justify-content flex-end 
        padding 20px
        set-flex(column)
    
    &-main
        width 100%
        background light
        padding 1em 6em 0
        overflow-y scroll
        transition .3s
        &::-webkit-scrollbar
            width 7px
            &:horizontal 
                display none
        &::-webkit-scrollbar-thumb
            background primaryAlternate
            border-radius 7px
        &::-webkit-scrollbar-button
            background transparent

.to-right 
    display flex
    justify-content flex-end
    margin-bottom 20px