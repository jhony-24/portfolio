.card-point-history 
    position relative
    border-left 1px solid rgba(0,0,0,.2)
    animation appear .3s 1 ease-out
    @keyframes appear 
        from 
            transform translateY(100%)
            opacity 0
    > .row
        padding 0 1em
        padding-left 1.5cm
        &.title 
            margin-bottom 10px
        &.detail 
            padding-bottom 40px

    &::before 
        content ""
        width 8px
        height @width
        background silver 
        border-radius 100%
        position absolute
        transform translateX(-50%)