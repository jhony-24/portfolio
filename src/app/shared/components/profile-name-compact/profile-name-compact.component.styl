@import url("https://fonts.googleapis.com/css2?family=Muli:wght@200&display=swap")

.profile
    margin 2em 0 5em
    animation appear-profile-name 1s 1
    @keyframes appear-profile-name
        from
            transform translateX(100%)
    &-my-name
        font-size 1.5em
        font-weight bold
        text-transform uppercase
        text-align center
        .clip
          width 10px
          height @width
          border-radius 100%
          background primaryAlternate
          display inline-block
        @media screen and (max-width : mediaTabletBig)
          font-size 2em
    &-career
        margin-top 10px
        text-align center
    @media screen and (max-width:mediaMobileBig)
      &-my-name, &-career
        font-size 1.5em !important
        text-align left

