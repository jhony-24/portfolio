{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "common/*" : ["components/common/*"],  
            "layouts/*" : ["components/layouts/*"],  
            "views/*" : ["views/*"],  
            "hooks/*" : ["hooks/*"],  
            "config/*" : ["config/*"],  
            "assets/*" : ["assets/*"],  
        },
        "jsx": "react",
        "resolveJsonModule": true
    },
    "include": ["src/**/*"]
}